@model IEnumerable<ProjetoFinalLeo.Models.Cidade>

@{
    ViewData["Title"] = "Index";
}

<h1>Cidade</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CidadeNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CidadeNome)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Estado.EstadoNome)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.CidadeId" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-action="Details" asp-route-id="@item.CidadeId" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.CidadeId" class="btn btn-segundo"><i class="fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
