@model ProjetoFinalLeo.Models.Usuario
@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <div class="login">
        <main class="form-signin w-100 m-auto">
            <form asp-action="Login">
                <img class="mb-4" src="/img/logopf.png" alt="" width="120" height="110">
                <h1 class="h3 mb-3 fw-normal">Faça o Login</h1>

                <div class="form-floating">
                    <input asp-for="UsuarioEmail" type="email" class="form-control" id="floatingInput" placeholder="nome@exemplo.com">
                    <label asp-for="UsuarioEmail" for="floatingInput">Email</label>
                    <span asp-validation-for="UsuarioEmail"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="UsuarioSenha" type="password" class="form-control" id="floatingPassword" placeholder="Senha">
                    <label asp-for="UsuarioSenha" for="floatingPassword">Senha</label>
                    <span asp-validation-for="UsuarioSenha"></span>
                </div>

                <div class="form-check text-start my-3">
                    <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        Relembrar
                    </label>
                </div>
                <button class="btn btn-primary w-100 py-2" type="submit">Entrar</button>
                <br />
                <h4 class="mensagem">@ViewBag.Mensagem</h4>
                <p class="mt-5 mb-3 text-body-secondary">© 2023–2024</p>
            </form>
        </main>
    </div>
